################################################################################
# VPC
################################################################################
data "aws_vpc" "internal" {
  tags = {
    "vpc:type"  = "internal"
    "Name"      = "internal"
  }
}

################################################################################
# Subnets
################################################################################
data "aws_subnets" "internal" {
  filter {
    name    = "vpc-id"
    values  = [data.aws_vpc.internal.id]
  }

  filter {
    name    = "tag:subnet:type"
    values  = ["internal"]
  }
}

################################################################################
# Availability Zones
################################################################################
data "aws_availability_zones" "region" {
  state = "available"
}